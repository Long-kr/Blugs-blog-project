{
    "compilerOptions": {
        "allowJs": true,
        "target": "ES6",
        "module": "commonjs",
        "moduleResolution": "node",
        "sourceMap": true,
        // "outDir": "./api",
        "rootDir": "./src",
        "strict": true,
     "noEmit": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "strictNullChecks": true,
        "resolveJsonModule": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "types": ["node"],
        "baseUrl": "./",
        "paths": {
            "@utils": ["src/utils/*"]
        },
    },
    // "exclude": ["node_modules"],
    "include": ["src/**/*"]
}
